{
  "name": "learning-contracts",
  "version": "0.1.0-alpha",
  "description": "Explicit, enforceable agreements governing what a learning co-worker/assistant is allowed to learn",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:all": "jest && npm test --workspaces --if-present",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "learning",
    "contracts",
    "consent",
    "ai",
    "memory",
    "privacy",
    "machine-learning",
    "governance",
    "audit"
  ],
  "author": "Learning Contracts Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kase1111-hash/learning-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/kase1111-hash/learning-contracts/issues"
  },
  "homepage": "https://github.com/kase1111-hash/learning-contracts#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@types/uuid": "^9.0.8",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
